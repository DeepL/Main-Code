<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/passwd"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:gravity="left"
        android:textSize="18sp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree and accept the terms and coonditions."
        android:id="@+id/checkBox"
        android:layout_gravity="center"
        android:onClick="showTerms"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvreg"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="21sp"
        android:textAllCaps="false"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:id="@+id/button4"
        android:layout_below="@+id/tvreg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
         android:onClick="login"
        android:textColor="#FAFAFA"
        android:background="@drawable/button_effect"/>

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:clickable="true"
       android:layout_below="@+id/passwd" 
       android:layout_marginTop="16dp"
       android:onClick="RegisterPage"

       android:orientation="horizontal"
       android:layout_centerHorizontal="true"
       android:id="@+id/tvreg"
        >

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password ?"
        android:id="@+id/forgotP"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="37dp"
        android:textColor="#FAFAFA"
        android:textAllCaps="false"
        android:background="@drawable/button_effect"
        android:layout_below="@+id/button4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_effect"
        android:id="@+id/tvregjoin"
        android:text="Register here"
        android:onClick="RegisterPage"
        android:textColor="#FAFAFA"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_alignTop="@+id/forgotP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/cms"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/email"
        android:hint="Employee id"
        android:gravity="left"
        android:textSize="18sp"
        android:ems="10"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/passwd"
        android:layout_alignStart="@+id/passwd" />


</RelativeLayout>
</ScrollView>